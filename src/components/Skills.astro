---
import TOOLS from "../constants/tools"

const toolsArray = Object.values(TOOLS)
const filteredTools = toolsArray.filter(
  tool => tool.name !== "Express" && tool.name !== "Pinia"
)
---

<section class="max-w-5xl mx-auto scroll-m-20 pb-32">
  <h2 class="text-2xl font-geist font-light mb-14">Habilidades</h2>
  <ul class="flex flex-wrap gap-x-5 gap-y-8 md:gap-8 justify-evenly lg:justify-center">
    {
      filteredTools.map(tool => (
        <li class="w-24 lg:w-24">
          <figure class="group flex flex-col items-center justify-between gap-3 grayscale hover:grayscale-0 hover:text-white transition-all duration-300 select-none">
            <img src={tool.src} alt={tool.alt} class="size-10 m-auto" />
            <figcaption class="text-center font-geist font-semibold text-neutral-500 group-hover:text-white transition-colors duration-300">
              {tool.name}
            </figcaption>
          </figure>
        </li>
      ))
    }
  </ul>
</section>
