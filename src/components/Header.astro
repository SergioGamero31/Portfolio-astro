---
const items = [
  {
    title: "Inicio",
    url: "/#"
  },
  {
    title: "Proyectos",
    url: "#projects"
  },
  {
    title: "Acerca de mi",
    url: "#about"
  }
]
---

<header class="mx-auto p-6">
  <nav
    aria-label="Main"
    class="flex justify-center font-medium text-neutral-300"
  >
    <ul class="flex md:gap-5 lg:gap-8">
      {
        items.map(item => (
          <li>
            <a
              href={item.url}
              class="hover:text-portage transition-colors cursor-pointer p-4 lg:p-0"
            >
              {item.title}
            </a>
          </li>
        ))
      }
    </ul>
  </nav>
</header>
